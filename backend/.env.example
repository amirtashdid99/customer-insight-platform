# Application Settings
APP_NAME="Customer Insight Platform"
APP_VERSION="1.0.0"
DEBUG=True

# Database
DATABASE_URL=sqlite:///./customer_insight.db

# Redis for Background Tasks (Celery)
REDIS_URL=redis://localhost:6379/0

# Demo Mode
# Set to True for online demos (uses mock data, faster)
# Set to False for full functionality (real web scraping)
DEMO_MODE=False

# Security
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ML Models
SENTIMENT_MODEL_PATH=../trained_models/sentiment_model
CHURN_MODEL_PATH=../trained_models/churn_model.pkl

# Scraping (only used when DEMO_MODE=False)
MAX_SCRAPE_RESULTS=50
SCRAPE_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
